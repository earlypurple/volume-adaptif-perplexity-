/* popup.css */

.popup-container {
  width: 300px;
  font-family: 'Segoe UI', sans-serif;
  color: #2c3e50;
  background: #f9f9f9;
  border-radius: 8px;
  overflow: hidden;
}

.popup-header {
  background: #34495e;
  color: #ecf0f1;
  padding: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-indicator {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.status-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  margin-right: 6px;
  background: #e74c3c;
}

.status-dot.active { background: #2ecc71; }

.popup-main {
  padding: 16px;
}

.power-button {
  width: 100%;
  padding: 10px;
  background: #2ecc71;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  cursor: pointer;
}

.power-button:hover { background: #27ae60; }

.noise-display {
  text-align: center;
  margin: 16px 0;
}

.noise-level {
  font-size: 24px;
  font-weight: bold;
}

.noise-bar {
  width: 100%;
  height: 8px;
  background: #ecf0f1;
  border-radius: 4px;
  overflow: hidden;
}

.noise-fill {
  height: 100%;
  background: #3498db;
  width: 0;
  transition: width 0.2s ease;
}

.sensitivity-section {
  margin: 16px 0;
}

.sensitivity-controls {
  display: flex;
  justify-content: space-between;
}

.sensitivity-btn {
  flex: 1;
  margin: 0 4px;
  padding: 8px;
  background: #bdc3c7;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.sensitivity-btn.active {
  background: #3498db;
  color: white;
}

.gains-section {
  margin: 16px 0;
}

.gain-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.gain-label {
  flex: 1;
}

.gain-bar {
  flex: 3;
  height: 6px;
  background: #ecf0f1;
  border-radius: 3px;
  margin: 0 8px;
  overflow: hidden;
}

.gain-fill {
  height: 100%;
  background: #e67e22;
  width: 0;
  transition: width 0.2s ease;
}

.gain-value {
  width: 40px;
  text-align: right;
}

.actions-section {
  display: flex;
  justify-content: space-between;
}

.btn {
  padding: 8px 12px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.btn-secondary {
  background: #e67e22;
  color: white;
}

.btn-secondary:hover {
  background: #d35400;
}

.btn-outline {
  background: transparent;
  border: 1px solid #34495e;
  color: #34495e;
}

.btn-outline:hover {
  background: #ecf0f1;
}
